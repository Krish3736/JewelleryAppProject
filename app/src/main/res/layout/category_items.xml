<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_items_card_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/theme_color_rose_gold"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/category_items_img_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/theme_color_rose_gold"
            android:scaleType="centerCrop"
            android:src="@drawable/category_background_image2" />

        <TextView
            android:id="@+id/category_items_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/category_items_img_id"
            android:layout_marginBottom="69dp"
            android:fontFamily="@font/cormorant_sc_semibold"
            android:gravity="center"
            android:padding="16dp"
            android:text="Beautiful Rings"
            android:textColor="#854B4B"
            android:textSize="35sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>