<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_color_rose_gold"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/search_box_id"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_box"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/black"
                android:textSize="14dp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider_id"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_period="1000"
                app:iss_text_align="CENTER">
            </com.denzcoskun.imageslider.ImageSlider>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:fontFamily="@font/cormorant_sc_semibold"
                android:gravity="center"
                android:text="Most Gifted"
                android:textColor="#511818"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/amatica_sc_bold"
                android:gravity="center"
                android:text="Check out the most gifted products by"
                android:textColor="#854B4B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/amatica_sc_bold"
                android:gravity="center"
                android:text=" our customers"
                android:textColor="#854B4B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/home_card_id_1"
                    android:layout_width="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@color/theme_color_rose_gold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@color/theme_color_rose_gold"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bracelet_5" />
<!--                     bracelet_5   -->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/theme_color_rose_gold"
                            android:fontFamily="@font/cabin"
                            android:padding="10dp"
                            android:text="Mirthful Elegance Diamond Bracelet"
                            android:textColor="#854B4B"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/theme_color_rose_gold"
                            android:fontFamily="@font/cabin"
                            android:padding="10dp"
                            android:text="₹ 76,135"
                            android:textColor="#854B4B"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/home_card_id_2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_color_rose_gold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/ring_10"
                            android:background="@color/theme_color_rose_gold"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/theme_color_rose_gold"
                            android:fontFamily="@font/cabin"
                            android:padding="10dp"
                            android:text="Flowering Wine Finger Ring"
                            android:textColor="#854B4B"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/theme_color_rose_gold"
                            android:fontFamily="@font/cabin"
                            android:padding="10dp"
                            android:text="₹ 58,144"
                            android:textColor="#854B4B"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/home_card_id_3"
                    android:layout_width="wrap_content"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@color/theme_color_rose_gold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/pendant_3"
                            android:background="@color/theme_color_rose_gold"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="#854B4B"
                            android:fontFamily="@font/cabin"
                            android:text="Plume Peacock Gold Pendant"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="₹ 64,199"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/home_card_id_4"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_color_rose_gold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/bracelet_3"
                            android:background="@color/theme_color_rose_gold"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="Beautiful Diamond Bracelet"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="₹ 69,999"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/home_card_id_5"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.85"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@color/theme_color_rose_gold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/watch_5"
                            android:background="@color/theme_color_rose_gold"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="#854B4B"
                            android:fontFamily="@font/cabin"
                            android:text="Elegance Rose Gold Watch"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="₹ 1,06,130"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/home_card_id_6"
                    android:layout_width="wrap_content"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_color_rose_gold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/necklace_2"
                            android:background="@color/theme_color_rose_gold"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="Ainoah Graceful Necklace"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="₹ 1,34,986"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/home_card_id_7"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@color/theme_color_rose_gold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/earrings_1"
                            android:background="@color/theme_color_rose_gold"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="Elegant Kundan Earrings"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="₹ 48,999"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/home_card_id_8"
                    android:layout_width="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_color_rose_gold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/pendant_5"
                            android:background="@color/theme_color_rose_gold"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="Omkar Glow Diamond Pendant"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/theme_color_rose_gold"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#854B4B"
                            android:text="₹ 89,549"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>